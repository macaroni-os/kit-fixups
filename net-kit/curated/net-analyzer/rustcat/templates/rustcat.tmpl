EAPI=7

inherit cargo

CRATES="
{{crates}}"

DESCRIPTION="Modern port listener & Reverse Shell"
HOMEPAGE="https://github.com/robiot/rustcat"
SRC_URI="{{artifacts[0].src_uri}}
	$(cargo_crate_uris ${CRATES})"
RESTRICT="mirror"
LICENSE="MIT"
SLOT="0"
KEYWORDS="*"
IUSE=""

post_src_unpack() {
	rm -rf "${S}"
	mv "${WORKDIR}"/{{github_user}}-{{github_repo}}-* "${S}" || die
}

src_install() {
	cargo_src_install

	mv "${ED}"/usr/bin/rc "${ED}"/usr/bin/rustcat
}

pkg_postinst() {
	elog 'Binary installed as "rustcat" instead of "rc" to avoid collisions with OpenRC.'
}
